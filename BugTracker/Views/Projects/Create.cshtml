@model BugTracker.Models.Project

@{
    ViewBag.Title = "Create";
}
<div class="align-center" style="font-style:oblique">
    <h3>Create Project</h3>
</div>

<div style="text-align:center">
    @Html.ActionLink("All Projects", "Index", null, new { @class = "btn btn-lg btn-info" })
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="form-horizontal">
     
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group" style="padding-top:20px">
            <p class="control-label col-md-2" style="font-weight:bold">
                Project Name
            </p>
           
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        @if ((User.IsInRole("Admin")))
        {
            <div class="form-group" style="padding-top:20px; padding-bottom:20px">
            <p class="control-label col-md-2" style="font-weight:bold">
                Project Manager
            </p>
            <div class="col-md-10">             
                @Html.DropDownList("ProjectManagerId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ProjectManagerId, "", new { @class = "text-danger" })
            </div>
        </div>
    }


        <div class="form-group" style="text-align:center; padding-top:20px">
            <div class="col-md-offset-4 col-md-4">
                <input type="submit" value="Create" class="btn btn-block btn-info" />
            </div>
        </div>
        </div>
    }


