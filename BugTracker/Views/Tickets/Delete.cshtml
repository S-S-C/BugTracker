@model BugTracker.Models.Ticket

@{
    ViewBag.Title = "Delete";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div style="float:left; padding-bottom:30px">
        <h3>
            Are you sure you want to delete this ticket? | <input type="submit" value="Delete" class="btn btn-md btn-info"/>
        </h3>
        @Html.ActionLink("Back to List", "Index")
    </div>
}

<div class="container-fluid">
    <div class="panel panel-default col-sm-8">
        <div class="panel-body">
            <p>
                <label>Project Name: </label>
                @Html.DisplayFor(model => model.Project.Name)
            </p>

            <p>
                <label>Ticket Title: </label>
                @Html.DisplayFor(model => model.Title)
            </p>

            <p>
                <label>Ticket Description: </label>
                @Html.DisplayFor(model => model.Description)
            </p>

            <p>
                <label>Ticket Owned by:</label>
                @Html.DisplayFor(model => model.OwnerUser.Email)
            </p>
        </div>
    </div>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color" style="margin-left:20px">
        @*<input type="submit" value="Delete" class="btn btn-default" />*@
        @Html.ActionLink("Back to All Tickets", "Index", new { id = Model.Id }, new { @class = "btn btn-lg btn-success" })
    </div>
}

